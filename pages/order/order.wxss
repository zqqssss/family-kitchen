/* pages/order/list/list.wxss */
page {
  background-color: #f7f8fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  padding: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部标题区域 */
.page-header {
  padding: 30rpx 40rpx;
  background: rgba(255, 255, 255, 0);
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #5a3e1b;
  display: block;
  border-left: 10rpx solid #ff9c00;
  padding-left: 20rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999;
  padding-left: 30rpx;
}

/* 列表区域 */
.order-scroll {
  flex: 1;
  box-sizing: border-box;
}

.order-list {
  padding: 20rpx;
}

/* 订单卡片 */
.order-card {
  background: #fff;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03);
  position: relative;
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.order-status.cooking {
  color: #ff9c00;
  background: #fffbf0;
}

.order-status.done {
  color: #999;
  background: #f5f5f5;
}

/* 图片预览 */
.dish-preview {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.preview-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
}

.more-count {
  color: #ccc;
  font-weight: bold;
  letter-spacing: 4rpx;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-count {
  font-size: 26rpx;
  color: #666;
}

.price-row {
  display: flex;
  align-items: baseline;
  font-size: 26rpx;
  color: #333;
}

.price-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
}

/* === 详情弹窗样式 === */
.detail-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: flex-end; /* 底部弹出 */
  backdrop-filter: blur(2px);
}

.detail-popup {
  width: 100%;
  height: 85vh; /* 占屏幕 85% 高度 */
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.detail-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  border-bottom: 1rpx solid #eee;
}

.close-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  color: #999;
  font-size: 40rpx;
  line-height: 1;
  padding: 10rpx;
}

.detail-scroll {
  flex: 1;
  background: #f9f9f9;
  padding: 30rpx;
  box-sizing: border-box;
}

.status-banner {
  text-align: center;
  margin-bottom: 40rpx;
}

.big-status {
  font-size: 48rpx;
  font-weight: 900;
  color: #5a3e1b;
  display: block;
  margin-bottom: 10rpx;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.detail-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #ff9c00;
  padding-left: 16rpx;
}

.detail-dish-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-dish-small {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.detail-dish-price {
  font-weight: bold;
  color: #333;
}

.detail-total-row {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 24rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}

.detail-final-price {
  font-size: 40rpx;
  color: #ff4d4f;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.info-row .label {
  color: #999;
  width: 140rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #333;
  flex: 1;
}

.value.remark {
  color: #ff9c00; /* 备注高亮 */
}

.detail-footer {
  padding: 20rpx 30rpx 50rpx; /* 底部适配 */
  background: #fff;
  border-top: 1rpx solid #eee;
}

.reorder-btn {
  background: linear-gradient(135deg, #ffb347 0%, #ff9c00 100%);
  color: #fff;
  border-radius: 50rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 订单状态 */
.order-status.cancelled {
  color: #999;
  background: #f5f5f5;
}
