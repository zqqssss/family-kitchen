<view class="container">
  
  <!-- 收货信息 -->
  <view class="section-card">
    <view class="card-title">收货信息</view>
    <view class="form-group">
      
      <view class="form-item">
        <text class="form-label">联系人</text>
        <input 
          class="form-input" 
          placeholder="请输入您的姓名" 
          placeholder-style="color:#ccc;" 
          value="{{displayUserInfo.nickname}}"
          bindinput="onNameInput"
        />
      </view>
      
      <view class="form-item">
        <text class="form-label">手机号</text>
        <input 
          class="form-input" 
          type="number" 
          maxlength="11" 
          placeholder="请输入手机号码" 
          placeholder-style="color:#ccc;" 
          value="{{displayUserInfo.phone}}"
          bindinput="onPhoneInput"
        />
      </view>
      
      <view class="form-item address-item">
        <text class="form-label">地址</text>
        <textarea 
          class="form-textarea" 
          placeholder="请输入详细送餐地址（楼号/门牌号）" 
          placeholder-style="color:#ccc;" 
          auto-height
          value="{{displayUserInfo.address}}"
          bindinput="onAddressInput"
        ></textarea>
      </view>

    </view>
  </view>

  <!-- 餐品详情 -->
  <view class="section-card">
    <view class="card-title">餐品详情</view>
    <view class="dish-list">
      <view class="dish-item" wx:for="{{cartList}}" wx:key="id">
        <image class="dish-img" src="{{item.image}}" mode="aspectFill"></image>
        <view class="dish-info">
          <view class="dish-name">{{item.name}}</view>
          <view class="dish-count">x{{item.count}}</view>
        </view>
        <view class="dish-price">¥{{item.price * item.count}}</view>
      </view>
    </view>
    <view class="order-summary">
      <text class="summary-count">共 {{totalCount}} 件</text>
      <view class="summary-total">
        <text>小计：</text>
        <text class="price-num">¥{{totalPrice}}</text>
      </view>
    </view>
  </view>

  <!-- 备注 -->
  <view class="section-card remark-card">
    <view class="card-title">备注</view>
    <textarea 
      class="remark-input" 
      placeholder="口味偏好、忌口等要求..." 
      placeholder-style="color:#ccc;" 
      maxlength="50"
      bindinput="onRemarkInput"
      auto-height
    ></textarea>
  </view>
  
</view>

<!-- 底部结算栏 -->
<view class="bottom-bar">
  <view class="total-wrapper">
    <text>合计：</text>
    <text class="final-price">¥{{totalPrice}}</text>
  </view>
  <button class="submit-btn" bindtap="submitOrder" loading="{{loading}}">
    提交订单
  </button>
</view>
